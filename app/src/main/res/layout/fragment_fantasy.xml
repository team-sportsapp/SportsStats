<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/table2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="323dp"
        android:layout_marginBottom="55dp">

        <TableRow
            android:id="@+id/tr2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/playername2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Player Name"
                android:textColor="#0C0C0C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/position2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textColor="#0C0C0C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fg2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="FG%"
                android:textColor="#0C0C0C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/threes2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="3PTM"
                android:textColor="#0C0C0C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Pts2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="PTS"
                android:textColor="#0C0C0C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/reb2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="REB"
                android:textColor="#0C0C0C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ast2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="AST"
                android:textColor="#0C0C0C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/st2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ST"
                android:textColor="#0C0C0C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/blk2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="BLK"
                android:textColor="#0C0C0C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/to2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="TO"
                android:textColor="#0C0C0C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ft2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="FT%"
                android:textColor="#0C0C0C"
                android:textSize="14sp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="84dp"
        android:layout_toStartOf="@+id/btnTest"
        android:layout_toLeftOf="@+id/btnTest"
        android:text="TextView" />

    <Button
        android:id="@+id/btnTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="323dp"
        android:layout_marginBottom="55dp"
        android:text="Button" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableLayout
                        android:id="@+id/table"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:id="@+id/tr1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/playername"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Player Name"
                                android:textColor="#0C0C0C"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/position"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Position"
                                android:textColor="#0C0C0C"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/fg"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="FG%"
                                android:textColor="#0C0C0C"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/threes"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="3PTM"
                                android:textColor="#0C0C0C"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/Pts"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="PTS"
                                android:textColor="#0C0C0C"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/reb"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="REB"
                                android:textColor="#0C0C0C"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/ast"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="AST"
                                android:textColor="#0C0C0C"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/st"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="ST"
                                android:textColor="#0C0C0C"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/blk"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="BLK"
                                android:textColor="#0C0C0C"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/to"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="TO"
                                android:textColor="#0C0C0C"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/ft"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="FT%"
                                android:textColor="#0C0C0C"
                                android:textSize="14sp" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>